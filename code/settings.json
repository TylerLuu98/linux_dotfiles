  "workbench.panel.defaultLocation": "bottom",
  "workbench.panel.opensMaximized": "never",
  "workbench.layoutControl.enabled": true,
  "workbench.layoutControl.type": "both",
  "workbench.editor.showTabs": "multiple",
  "workbench.editor.pinnedTabsOnSeparateRow": false,
  "workbench.sideBar.location": "left",
  "explorer.compactFolders": false,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.sortOrder": "type",
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js, ${capture}.d.ts, ${capture}.test.ts, ${capture}.test.js, ${capture}.spec.ts, ${capture}.spec.js, ${capture}.mock.ts",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts, ${capture}.test.js, ${capture}.spec.js",
    "*.jsx": "${capture}.js, ${capture}.test.jsx, ${capture}.spec.jsx, ${capture}.css, ${capture}.scss",
