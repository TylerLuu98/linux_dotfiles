{
  /* ==================================== */
  /* === ADVANCED UI/UX CONFIGURATION === */
  /* ==================================== */

  /* === FONT SETTINGS === */
  "editor.fontFamily": "'JetBrains Mono', 'Cascadia Code PL', 'Fira Code', 'Operator Mono', 'Dank Mono', 'Victor Mono', 'Source Code Pro', 'Consolas', monospace",
  "editor.fontSize": 14,
  "editor.fontLigatures": "'calt', 'ss01', 'ss02', 'ss03', 'ss04', 'ss05', 'ss06', 'ss07', 'ss08', 'zero', 'onum'",
  "editor.fontWeight": "450",
  "editor.lineHeight": 1.6,
  "editor.letterSpacing": 0.5,
  "editor.renderWhitespace": "boundary",
  "editor.cursorBlinking": "phase",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorStyle": "line",
  "editor.cursorWidth": 2,

  /* === EDITOR APPEARANCE === */
  "editor.minimap.enabled": true,
  "editor.minimap.renderCharacters": false,
  "editor.minimap.showSlider": "always",
  "editor.minimap.side": "right",
  "editor.minimap.size": "fill",
  "editor.minimap.scale": 2,
  "editor.guides.bracketPairs": "active",
  "editor.guides.bracketPairsHorizontal": "active",
  "editor.guides.highlightActiveBracketPair": true,
  "editor.guides.highlightActiveIndentation": true,
  "editor.guides.indentation": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.occurrencesHighlight": "singleFile",
  "editor.selectionHighlight": true,
  "editor.wordHighlightStrong": true,
  "editor.wordHighlightTextDocument": true,

  /* === SCROLL & SMOOTHNESS === */
  "editor.smoothScrolling": true,
  "editor.mouseWheelScrollSensitivity": 1.5,
  "editor.fastScrollSensitivity": 8,
  "editor.mouseWheelZoom": true,
  "editor.stickyScroll.enabled": true,
  "editor.stickyScroll.maxLineCount": 5,
  "editor.scrollBeyondLastLine": false,
  "editor.scrollbar.vertical": "visible",
  "editor.scrollbar.horizontal": "visible",
  "editor.scrollbar.verticalScrollbarSize": 12,
  "editor.scrollbar.horizontalScrollbarSize": 12,
  "editor.hideCursorInOverviewRuler": false,
  "editor.folding": true,
  "editor.showFoldingControls": "always",
  "editor.foldingHighlight": true,
  "editor.foldingImportsByDefault": false,
  "editor.unfoldOnClickAfterEndOfLine": true,

  /* === WINDOW & WORKBENCH APPEARANCE === */
